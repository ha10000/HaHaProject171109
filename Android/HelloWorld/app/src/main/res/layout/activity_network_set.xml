<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="kr.linkb.helloworld.SensorAddActivity">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#0000ff"
        android:textSize="25dp"
        android:text="연결할 서버 정보를 입력하세요"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    IP address:"/>
        <EditText
            android:textSize="25dp"
            android:id="@+id/ip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."/>
        <EditText
            android:textSize="25dp"
            android:id="@+id/ip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."/>
        <EditText
            android:textSize="25dp"
            android:id="@+id/ip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."/>
        <EditText
            android:textSize="25dp"
            android:id="@+id/ip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    PORT NO:"/>
        <EditText
            android:id="@+id/port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"/>
    </LinearLayout>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:textColor="#0000ff"
        android:textSize="25dp"
        android:text="연결할 MongoDB 서버 정보를 입력하세요"/>
    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    IP address:"/>
        <EditText
            android:textSize="25dp"
            android:id="@+id/db_ip1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."/>
        <EditText
            android:textSize="25dp"
            android:id="@+id/db_ip2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."/>
        <EditText
            android:textSize="25dp"
            android:id="@+id/db_ip3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="."/>
        <EditText
            android:textSize="25dp"
            android:id="@+id/db_ip4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="    PORT NO:"/>
        <EditText
            android:textSize="25dp"
            android:id="@+id/db_port"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="xxx"/>
    </LinearLayout>
    <Button
        android:onClick="ButtonNetworkSave"
        android:textSize="25dp"
        android:text="\u003c 저 장 \u003e"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/WriteBufferEditText01"
        android:hint="보관하기W"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <EditText
        android:id="@+id/ReadBufferEditText01"
        android:hint="보관읽기R"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="writeNetworkFile"
        android:id="@+id/ButtonWriteFile"
        android:text="Write to File"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
    <Button
        android:onClick="readNetworkFile"
        android:id="@+id/ButtonReadFile"
        android:text="Read from File"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>
